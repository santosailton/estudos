<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtTituloSMS"
        android:background="@color/colorPrimary"
        android:textColor="@color/corCinza"
        android:textSize="35sp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/editSMSPara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/txtHintPara"
        android:inputType="phone" />

    <EditText
        android:id="@+id/editSMSmensagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="4"
        android:hint="@string/txthintMensagem"
        android:ems="10"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/corVerde"
        android:text="@string/btnEnviarSMS" />
</LinearLayout>